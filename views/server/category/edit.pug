extends ../layout

block content
    .row
        .col-md-12
            form(action='', method='post')
                .form-group
                    label 名称
                    input.form-control(name='name', value='#{category.name}')
                .form-group
                    label 标记(别名)
                    input.form-control(name='flag', value='#{category.flag}')
                .form-group
                    label 父分类
                    select.form-control.input-sm(name='parent')
                        option(value='') 无
                        - each item in items
                            if (item.id + '') === (category.parent + '')
                                option(value='#{item.id}', selected) #{item.name}
                            else
                                option(value='#{item.id}') #{item.name}
                .form-group
                    label 描述
                    textarea.form-control(name='description', rows='8') #{category.description}
                input(type='hidden', name='_csrf', value='#{token}')
                button.btn.btn-primary(type='submit') 提交

block foot-js
    script.
        Messenger.options = {
            extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
            theme: 'flat'
        };
        $(function() {
            var messenger;
            $('form').ajaxForm({
                beforeSerialize: function() {
                    console.log('beforeSerialize')
                },
                beforeSubmit: function() {
                    console.log('beforeSubmit')
                    messenger = Messenger().post("处理中...");
                },
                success: function(data, status, xhr, $form) {
                    console.log(data)
                    var status = data.status;
                    if (status) {
                        messenger.update({
                            message: '更新成功',
                            hideAfter: 3,
                            type: 'success'
                        });
                    } else {
                        messenger.update({
                            message: '更新失败',
                            hideAfter: 3,
                            type: 'success'
                        });
                    }
                },
                err: function() {
                    console.log('error')
                    messenger.update({
                        message: '系统繁忙',
                        hideAfter: 3,
                        type: 'success'
                    });
                }
            })
        })