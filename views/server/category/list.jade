extends ../layout

block content
    .row
        .col-md-12
            a.btn.btn-info(href='#{adminDir}/category/add') 添加分类
            table.table.table-striped
                thead
                    tr
                        th 名称
                        th 标记
                        th 创建者
                        th 创建时间
                        th 操作
                tbody
                    - each category in categorys
                        tr
                            td
                                a(href='#{adminDir}/category/#{category.id}') #{category.name}
                            td
                                | #{category.flag}
                            td
                                if (category.author)
                                    | #{category.author.name}
                            td
                                | #{moment(category.created).format('LLL')}
                            td
                                a.btn.btn-default.btn-xs(href='#{adminDir}/category/#{category.id}/edit') 编辑
                                | &nbsp;
                                a.btn.btn-danger.btn-xs.J_del(href='#{adminDir}/category/#{category.id}/del') 删除
            if (pageInfo && pageInfo.totalPage > 1)
                include ../mixin
                +pagination(pageInfo)
block foot-js
    script.
        var token = '#{token}';
        Messenger.options = {
            extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
            theme: 'flat'
        };
        $(function() {
            $(document).on('click', '.J_del', function(e) {
                e.preventDefault();
                var $this = $(this);
                var url = $this.attr('href');
                var messenger = Messenger().post("处理中...");
                $.post(url, {_csrf: token}, function(res) {
                    console.log(res);
                    var status = res.status;
                    if (status) {
                        messenger.update({
                            message: '删除成功',
                            hideAfter: 3,
                            type: 'success'
                        });
                        setTimeout(function() {
                            $this.closest('tr').remove();
                        }, 1000)
                        
                    } else {
                        messenger.update({
                            message: '删除失败',
                            hideAfter: 3,
                            type: 'error'
                        });
                    }
                })
            })
        })